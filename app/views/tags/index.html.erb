<div class="row">
	<div class="small-12 medium-8 columns">
		<h1>Listing tags</h1>
		<%= link_to 'New Tag', new_tag_path, :class => "button tiny" %>
		<table>
		  <thead>
		    <tr>
		      <th colspan="2"></th>
		      <th>Name</th>
		      <th>Active</th>
			  <th>Default</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @tags.each do |tag| %>
		      <tr>
		        <td><%= link_to raw('<i class="fi-pencil"></i>'), edit_tag_path(tag) %></td>
		        <td><%= link_to raw('<i class="fi-trash"></i>'), tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		        <td><%= tag.name %></td>
		        <td><%= tag.active ? raw('<i class="fi-check"></i>') : raw('<i class="fi-x"></i>') %></td>
				<td><%= tag.is_default ? raw('<i class="fi-check"></i>') : raw('<i class="fi-x"></i>') %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>