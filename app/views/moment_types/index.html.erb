<h1>Listing moment_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moment_types.each do |moment_type| %>
      <tr>
        <td><%= moment_type.name %></td>
        <td><%= moment_type.description %></td>
        <td><%= link_to 'Show', moment_type %></td>
        <td><%= link_to 'Edit', edit_moment_type_path(moment_type) %></td>
        <td><%= link_to 'Destroy', moment_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

